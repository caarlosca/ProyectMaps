    <field name="cliente.salario">
        <field-validator type="double">
            <param name="minInclusive">1000.0</param>
            <param name="maxInclusive">2000.0</param>
            <message> El salario valido debe comprenderse entre 1000 y 2000 </message>
        </field-validator>
    </field>
    <field name="cliente.edad">
        <field-validator type="int">
            <param name="min">10</param>
            <param name="max">20</param>
            <message> La edad tiene que estar comprendida entre ${min} y ${max} aÃ±os </message>
        </field-validator>
    </field>
    <field name="cliente.fecha">
        <field-validator type="date">
            <param name="trim">true</param>
            <param name="min">01/01/1900</param>
            <param name="max">31/12/2099</param>
            <message> Fecha entre ${min} y ${max} </message>
        </field-validator>
    </field>
    <field name="cliente.email">
        <field-validator type="email">
            <param name="trim">true</param>
            <message> Email no valido</message>
        </field-validator>
    </field>
    <field name="cliente.url">
        <field-validator type="url">
            <param name="trim">true</param>
            <message>Debes de introducir una URL valida</message>
        </field-validator>
    </field>
    <field name="cliente.nombre">
        <field-validator type="mivalidador">
            <param name=""></param>    
            <message>No me gusta</message>
        </field-validator>
    </field>
